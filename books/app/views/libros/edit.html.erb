<h2>Editar libro: <%= @libro.nombre %></h2>
<%= form_for @libro, url: {action: 'update'}, html: {multipart: true} do |f| %>
  <p><b>Nombre</b><br /><%=f.text_field :nombre %></p>
  <p><b>Autor</b><br /><%=f.text_field :autor %></p>
  <p><b>Descripcion</b><br /><%=f.text_area :descripcion %></p>
  <p><b>Hecha por</b><br /><%=f.text_field :usuario %></p>
  <p><b>Imagen</b><br /><%=f.file_field :img_ruta %></p>
  <p><%= f.submit "Actualizar" %></p>
<% end %>
